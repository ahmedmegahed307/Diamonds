                                            <li>

                                                <partial name="_LoginPartial" />
                                            </li>

                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            <div>
                                <div class="icon-nav">
                                    <ul>
                                        <li class="onhover-div mobile-search">
                                            <div>
                                                <img src="~/assets/images/jewellery/icon/search.png"
                                                     onclick="openSearch()" class="img-fluid blur-up lazyload" alt="">
                                                <i class="ti-search" onclick="openSearch()"></i>
                                            </div>
                                            <div id="search-overlay" class="search-overlay">
                                                <div>
                                                    <span class="closebtn" onclick="closeSearch()"
                                                          title="Close Overlay">×</span>
                                                    <div class="overlay-content">
                                                        <div class="container">
                                                            <div class="row">
                                                                <div class="col-xl-12">
                                                                    <form>
                                                                        <div class="form-group">
                                                                            <input type="text" class="form-control"
                                                                                   id="exampleInputPassword1"
                                                                                   placeholder="Search a Product">
                                                                        </div>
                                                                        <button type="submit" class="btn btn-primary">
                                                                            <i class="fa fa-search"></i>
                                                                        </button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="onhover-div mobile-setting">
                                            <div>

                                                <img src="~/assets/images/jewellery/icon/controls.png"
                                                     class="img-fluid blur-up lazyload" alt="">
                                                <i class="ti-settings"></i>

                                            </div>
                                            <div class="show-div setting">
                                                <h6>@localizer["Language"]</h6>
                                                <ul>

                                                    <partial name="_LanguaguePartial" />
                                                </ul>
                                                <h6>@localizer["Currency"]</h6>
                                                <ul class="list-inline">
                                                    <li><a href="#">@localizer["Euro"]</a> </li>
                                                    <li><a href="#">@localizer["EgyptianPound"]</a> </li>
                                                    <li><a href="#">@localizer["TurkishLira"]</a> </li>
                                                    <li><a href="#">@localizer["Dollar"]</a> </li>
                                                </ul>
                                            </div>
                                        </li>

                                        <li class="onhover-div mobile-cart ">

                                            <div>
                                                <img src="~/assets/images/jewellery/icon/cart.png"
                                                     class="img-fluid blur-up lazyload" alt="">
                                                @await Component.InvokeAsync("SmallCartCount")
                                            </div>


                                            <ul class="show-div shopping-cart">
                                                @await Component.InvokeAsync("SmallCart")
                                            </ul>

                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header end -->
    <br />
    <br />
    <br />
    <br />





    @RenderBody()
